            name: "new username",
            avatar: "http://timtang.me",
            email: "tang.jilong@gmail.com"
        }

+ Response Success (application/json)

    + Body

        { 
            success: true,
            msg: "Update user success!"
        }

+ Response Failure (application/json)

        {
            success: false,
            msg: "Update user failure."
        }

